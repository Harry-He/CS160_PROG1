<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result_text0"
        android:text="RESULTabcdefgh"
        android:textSize="30dp"
        android:layout_below="@+id/phase_button0"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:enabled="false"
        android:singleLine="false"
        android:visibility="visible"
        android:layout_gravity="fill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From:"
        android:id="@+id/text0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/from_button0"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text0"
        android:longClickable="false"
        android:textOff="English"
        android:textOn="English" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish"
        android:id="@+id/from_button1"
        android:textOff="Spanish"
        android:textOn="Spanish"
        android:layout_alignTop="@+id/from_button0"
        android:layout_toEndOf="@+id/from_button0" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chinese"
        android:id="@+id/from_button2"
        android:layout_alignTop="@+id/from_button1"
        android:layout_toEndOf="@+id/from_button1"
        android:textOff="Chinese"
        android:textOn="Chinese" />

    <TextView
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To:"
        android:id="@+id/text1"
        android:layout_below="@+id/from_button0"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/to_button0"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:textOff="English"
        android:textOn="English" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish"
        android:id="@+id/to_button1"
        android:layout_alignTop="@+id/to_button0"
        android:layout_alignStart="@+id/from_button1"
        android:textOff="Spanish"
        android:textOn="Spanish" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chinese"
        android:id="@+id/to_button2"
        android:layout_alignTop="@+id/to_button1"
        android:layout_toEndOf="@+id/to_button1"
        android:textOff="Chinese"
        android:textOn="Chinese" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phrases:"
        android:id="@+id/text2"
        android:layout_below="@+id/to_button0"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:id="@+id/phase_button0"
        android:textOff="hello"
        android:textOn="hello"
        android:layout_below="@+id/text2"
        android:layout_alignEnd="@+id/to_button0" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how much"
        android:id="@+id/phase_button1"
        android:textOff="how much"
        android:textOn="how much"
        android:layout_below="@+id/text2"
        android:layout_toEndOf="@+id/phase_button0" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please"
        android:id="@+id/phase_button2"
        android:textOff="please"
        android:textOn="please"
        android:layout_alignTop="@+id/phase_button1"
        android:layout_toEndOf="@+id/phase_button1" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thank you"
        android:id="@+id/phase_button3"
        android:textOff="thanks"
        android:textOn="thanks"
        android:checked="false"
        android:layout_alignTop="@+id/phase_button2"
        android:layout_toEndOf="@+id/phase_button2" />

    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="goodbye"
        android:id="@+id/phase_button4"
        android:textOff="goodbye"
        android:textOn="goodbye"
        android:layout_alignTop="@+id/phase_button3"
        android:layout_toEndOf="@+id/phase_button3" />


    <ToggleButton
        style="?android:attr/buttonTint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All other languages"
        android:id="@+id/to_button3"
        android:layout_alignTop="@+id/to_button2"
        android:layout_toEndOf="@+id/to_button2"
        android:textOff="All other languages"
        android:textOn="All other languages" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orientation_switch"
        android:textOff="portrait"
        android:textOn="landscape"
        android:checked="false"
        android:splitTrack="true"
        android:showText="true"
        android:theme="@style/AppTheme"
        android:layout_alignTop="@+id/text0"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
